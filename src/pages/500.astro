---
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <div class="flex flex-col items-center justify-center h-screen text-center px-4">
    <h1 class="text-4xl font-bold text-text mb-4">Oops! Something went wrong</h1>
    <p class="text-text-secondary mb-8">The page will automatically reload in 3 seconds...</p>
    <div class="w-16 h-16 border-4 border-accent border-t-transparent rounded-full animate-spin"></div>
  </div>
</Layout>

<script>
  setTimeout(() => {
    window.location.reload();
  }, 1);
</script>